
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(uuid())
  email     String   @unique
  password  String
  name      String
  role      Role     @default(SERVANT)
  isActive  Boolean  @default(false)
  isEnabled Boolean  @default(true)  // Admin can enable/disable user access
  activationDenied Boolean @default(false)  // Admin denied the activation request
  classId   String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  // Soft Delete
  isDeleted Boolean  @default(false)
  deletedAt DateTime?
  
  whatsappTemplate String?

  notes     Note[]
  studentPreferences UserStudentPreference[]
  managedClasses ClassManager[]
  notificationPreference NotificationPreference?

  // Phone support
  phone     String?  @unique

  // Email confirmation
  isEmailConfirmed  Boolean  @default(false)
  confirmationToken String?

  // Password recovery
  passwordResetToken   String?
  passwordResetExpires DateTime?

  // FCM token for push notifications
  fcmToken  String?

  @@map("users")
}


enum Role {
  ADMIN
  SERVANT
}

model Student {
  id        String   @id @default(uuid())
  name      String
  phone     String?
  address   String?
  birthdate DateTime?
  classId   String?  // Could be a relation if we had Class table
  
  // Relations
  notes     Note[]
  attendance AttendanceRecord[]
  userPreferences UserStudentPreference[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  isDeleted Boolean  @default(false)
  deletedAt DateTime?

  @@map("students")
}

model AttendanceRecord {
  id        String   @id @default(uuid())
  sessionId String
  session   AttendanceSession @relation(fields: [sessionId], references: [id])
  studentId String
  student   Student  @relation(fields: [studentId], references: [id])
  status    String   // PRESENT, ABSENT, EXCUSED
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  isDeleted Boolean  @default(false)
  deletedAt DateTime?

  @@map("attendance_records")
}

model Note {
  id        String   @id @default(uuid())
  content   String
  studentId String
  student   Student  @relation(fields: [studentId], references: [id])
  authorId  String
  author    User     @relation(fields: [authorId], references: [id])
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  isDeleted Boolean  @default(false)
  deletedAt DateTime?

  @@map("notes")
}

model Class {
  id        String   @id @default(uuid())
  name      String
  grade     String?
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  // Soft Delete
  isDeleted Boolean  @default(false)
  deletedAt DateTime?

  // Relations
  sessions  AttendanceSession[]
  managers  ClassManager[]

  @@map("classes")
}

model AttendanceSession {
  id        String   @id @default(uuid())
  classId   String
  class     Class    @relation(fields: [classId], references: [id])
  date      DateTime
  note      String?
  
  records   AttendanceRecord[]
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  isDeleted Boolean  @default(false)
  deletedAt DateTime?

  @@map("attendance_sessions")
}

model UserStudentPreference {
  userId               String
  user                 User    @relation(fields: [userId], references: [id])
  studentId            String
  student              Student @relation(fields: [studentId], references: [id])
  customWhatsappMessage String?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@id([userId, studentId])
  @@map("user_student_preferences")
}

model ClassManager {
  id        String   @id @default(uuid())
  classId   String
  class     Class    @relation(fields: [classId], references: [id])
  userId    String
  user      User     @relation(fields: [userId], references: [id])
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  // Soft Delete
  isDeleted Boolean  @default(false)
  deletedAt DateTime?

  @@unique([classId, userId])
  @@map("class_managers")
}

model NotificationPreference {
  id        String   @id @default(uuid())
  userId    String   @unique
  user      User     @relation(fields: [userId], references: [id])
  
  // Toggle each notification type
  noteAdded           Boolean @default(true)
  noteUpdated         Boolean @default(true)
  attendanceRecorded  Boolean @default(true)
  birthdayReminder    Boolean @default(true)
  inactiveStudent     Boolean @default(true)
  newUserRegistered   Boolean @default(true)
  
  // Customizable settings
  inactiveThresholdDays  Int     @default(14)
  birthdayNotifyMorning  Boolean @default(true)
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("notification_preferences")
}
